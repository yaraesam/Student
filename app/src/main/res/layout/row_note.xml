<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note Title "
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />


    <TextView
        android:id="@+id/note_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note Title  Note Title  Note Title  Note Title  Note Title  Note Title  Note Title  Note Title  Note Title  Note Title  Note Title  Note Title  Note Title "
        android:textSize="12sp"
        android:textColor="#C6000000"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />


    <TextView
        android:id="@+id/note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/10/2020 "
        android:textSize="12sp"
        android:textColor="#99000000"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        />


</LinearLayout>